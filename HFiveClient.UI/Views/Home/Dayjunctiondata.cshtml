            .weui-grid.btn > .weui-grid__label {
                color: #ff9900;
                
            }

            .weui-grid.btn:first-child > .weui-grid__label {
                color: white;
                
            }
   
        .bggrey {
            background-color: #efefef;
        }

        .weui-media-box__desc {
            margin-top:10px;
        }
    </style>

}
