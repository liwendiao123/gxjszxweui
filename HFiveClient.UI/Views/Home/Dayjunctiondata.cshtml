                    width: 50%;
                    height: 2em;
                    color: white;
                }

        .hotlight {
            background-color: #ff9900;
        }

        .weui-grid {
            padding: 5px;
        }

            .weui-grid:before, .weui-grid:after {
                border: none;
            }

        .weui-panel__hd i {
            float: right;
            width: 1em;
            height: 1em;
            color: #666;
        }

        .weui-grid.btn {
            width:20%;
            background-color:#ff9900;
            margin-top:10px;
           
        }
            .weui-grid.btn:first-child {
                margin-left: 1em;
                border-radius: 10px 0 0 10px
