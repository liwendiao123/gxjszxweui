@{
    ViewBag.Title = "主页";
}
@section styles{
    <style>
        header {
            background-color:#eee;      
        }
        .weui-panel__hd:after {
            left: 0px;
        }
        .weui-panel:before {           
             border-top: 0px solid #e5e5e5;      
        }
        .box {
            display: flex;
            border-bottom: 0.5px solid #eee;
        }
        .box .item {
            width:50%;
            text-align:center;
        }

        .box .item > a {
            display: flex;
            justify-content: center;
            border-right: 1px solid #eee;
        }

        .box .item > a > i, .box .item > a > span {
            line-height: 2em;
            height: 2em;
        }

        .box .item > a > span {
            margin-left: 10px;
            padding-top: 0.8em;
            padding-bottom: 0.5em;
            font-size: 0.5em;
        }

        .box .item > a:after {
            border-right: 1px solid #eee;
        }
        .pre-video-box-item {
            margin:1em;
            position:relative;
        }
            .pre-video-box-item > img {
            
                width:100%;
            }
            .pre-video-box-item > a.weui-btn {
                position: absolute;
                top: 5px;
                right: 10px;
                background-color: burlywood;
                color: white;
                font-size:14px;
            }
        .pre-video-box-item > p {
            
           background-color:#eee; 
        }


        .box.bottom {
            justify-content: center;
            border-bottom: none;
            margin-bottom: 1em;
        }

        .pre-video {
            justify-content: center;
            border-bottom: none
        }

    </style>

}
